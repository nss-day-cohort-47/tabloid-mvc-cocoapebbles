@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "Details";
}
<div class="container pt-5">
    <div class="container">


        <h1>User Profile</h1>

        <div>

            <hr />
            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DisplayName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DisplayName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreateDateTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreateDateTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserTypeId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserType.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageLocation)
                </dt>
                <dd class="col-sm-10">
                    @if(string.IsNullOrWhiteSpace(Model.ImageLocation))
                    {
                    <img src="https://pbs.twimg.com/media/DTh3HZ7W4AAJLFG.jpg" class="img-thumbnail" style="height: auto" alt="Generic Profile Picture Icon" />
                    }
                    else
                    {
                    <img src="@Model.ImageLocation" class="img-thumbnail" style="height: auto" alt="@Model.FullName image" />
                    }
                </dd>
            </dl>
        </div>
        <div>
            @Html.ActionLink("Edit", "Edit", new {  id = Model.Id  }) |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>